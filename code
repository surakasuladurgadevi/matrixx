#include<stdio.h>
int n=2,m=2;
void addmatrix(int a[n][m],int b[n][m]);
void submatrix(int a[n][m],int b[n][m]);

int main()
{
	int a[n][m];
	int b[n][m];
	int i,j;
	printf("Enter A matrix");
	for(i=0;i<m;i++)
	{
		for(j=0;j<n;j++)
		{
			scanf("%d",&a[i][j]);
		}
	}
	printf("Enter B matrix");
	for(i=0;i<m;i++)
	{
		for(j=0;j<n;j++)
		{
			scanf("%d",&b[i][j]);
		}
	}
	addmatrix(a,b);
	submatrix(a,b);
}

void addmatrix(int a[n][m],int b[n][m])
{
	int c[n][m];
	int i,j;
	printf("Additon of two matrices:\n");
	for(i=0;i<m;i++)
	{
		for(j=0;j<n;j++)
		{
			c[i][j]=a[i][j]+b[i][j];
			printf("%d ",c[i][j]);
		}
		printf("\n");
	}
}
	void submatrix(int a[n][m],int b[n][m])
   {
	int c[n][m];
	int i,j;
	printf("subtration of two matrices:\n");
	for(i=0;i<m;i++)
	{
		for(j=0;j<n;j++)
		{
			c[i][j]=a[i][j]-b[i][j];
			printf("%d ",c[i][j]);
		}
		printf("\n");
	}
}
